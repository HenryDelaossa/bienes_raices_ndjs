extends ../layouts/index

block contenido
    div.py-10
        h1.text-center.text-4xl.font-extrabold.my-10 Bienes
            span.font-normal Raices
        h2.text-center.text-2xl.font-extrabold= page

        if errors
            div(class="max-w-md mx-auto my-10")
                each error in errors 
                    p(class="bg-red-500 text-white uppercase text-xs text-center p-2 mb-1 font-bold")= error.msg

        .mt-8.mx-auto.max-w-md
            .bg-white.py-8.px-4.shadow
                form.space-y-5(method="POST" action="/auth/registro")
                    div
                        label.block.text-sm.uppercase.text-gray-500.mb-2.font-bold(for="nombre") Tu Nombre
                        input#nombre.w-full.px-3.py-2.border.border-gray-300.rouded-md.placeholder-gray-400(placeholder="Tu Nombre" type="text" name="nombre" value= data ? data.nombre : "")
                    div
                        label.block.text-sm.uppercase.text-gray-500.mb-2.font-bold(for="email") Tu Email
                        input#email.w-full.px-3.py-2.border.border-gray-300.rouded-md.placeholder-gray-400(placeholder="Tu Email" type="email" name="email" value= data ? data.email : "")
                    div
                        label.block.text-sm.uppercase.text-gray-500.mb-2.font-bold(for="password") Tu Password
                        input#password.w-full.px-3.py-2.border.border-gray-300.rouded-md.placeholder-gray-400(placeholder="Tu Password" type="password" name="password")
                    div
                        label.block.text-sm.uppercase.text-gray-500.mb-2.font-bold(for="repite_password") Repite Tu Password
                        input#repite_password.w-full.px-3.py-2.border.border-gray-300.rouded-md.placeholder-gray-400(placeholder="Repite Tu Password" type="password" name="repite_password" )
                        //- links
                    div.flex.items-center.justify-between
                        a.text-gray-500.text-xs(href="/auth/login") Â¿Ya tienes cuenta? Inicia sesion
                        a.text-gray-500.text-xs(href="/auth/recuperar-password") Olvide mi password
                        //- button
                    input(class="w-full bg-indigo-600 cursor-pointer text-white font-bold py-3  hover:bg-indigo-900" type="submit" value="Crear Cuenta")